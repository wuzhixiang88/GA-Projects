<html>
    <head>
        <title>Online Marketplace</title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link 
            rel="stylesheet" 
            href="/bootstrap/css/bootstrap.min.css"
        />
        <link 
            rel="stylesheet" 
            href="/main.css"
        />

        <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    </head>

    <body>
        <div class="container">
            <header>
                <div class="row bg-primary p-3">
                    <div class="container-fluid col-md-6 w-50">
                        <div class="fs-5 fw-bold mt-1">
                            <a 
                                class="btn btn-primary text-dark fs-4 fw-bold ms-1 p-1" 
                                href="/" 
                            >
                                ONLINE MARKETPLACE
                            </a>
                        </div>
                    </div>
                    <div class="container-fluid col-md-6 d-flex justify-content-end w-50">
                        <% if (username) { %>
                            <div class="d-flex align-items-center">
                                <div class="btn-group">
                                    <button 
                                        type="button" 
                                        class="dropdown-toggle btn btn-danger text-white fw-bold" 
                                        data-bs-toggle="dropdown" 
                                        aria-expanded="false"
                                    >
                                        Hello, <%= firstname %>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a 
                                                class="dropdown-item" 
                                                href="/user/inbox"
                                            >
                                                Inbox
                                            </a>
                                        </li>
                                        <li>
                                            <a 
                                                class="dropdown-item" 
                                                href="/product"
                                            >
                                                My Listing
                                            </a>
                                        </li>
                                        <li>
                                            <a 
                                                class="dropdown-item" 
                                                href="/user/logout"
                                            >
                                                Logout
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="d-flex align-items-center">
                                <!-- Button trigger modal -->
                                <button
                                    type="button" 
                                    class="btn btn-primary fw-bold" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#register"
                                >
                                    Register
                                </button>
                                <!-- Modal -->
                                <div
                                    class="modal fade" 
                                    id="register"
                                    data-bs-backdrop="static"
                                    data-bs-keyboard="false"
                                    tabindex="-1" 
                                    aria-labelledby="staticBackdropLabel" 
                                    aria-hidden="true"
                                >
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header border-bottom-0">
                                                <button
                                                    type="button" 
                                                    class="btn-close" 
                                                    data-bs-dismiss="modal" 
                                                    aria-label="Close"
                                                ></button>
                                            </div>

                                            <form
                                                class="mb-0"
                                                method="POST"
                                                action="/user/signup"
                                            >
                                                <div class="modal-body">
                                                    <div class="container-fluid">
                                                        <div class="row mb-3">
                                                            <div class="col-md-12">
                                                                <input
                                                                    class="form-control"  
                                                                    type="text"
                                                                    name="firstname"                     
                                                                    placeholder="First Name"
                                                                />
                                                            </div>
                                                        </div>
                                                        <div class="row mb-3">
                                                            <div class="col-md-12">
                                                                <input
                                                                    class="form-control" 
                                                                    type="text"
                                                                    name="lastname" 
                                                                    placeholder="Last Name"
                                                                />
                                                            </div>
                                                        </div>
                                                        <div class="row mb-3">
                                                            <div class="col-md-12">
                                                                <input
                                                                    class="form-control"  
                                                                    type="text"
                                                                    name="username"                     
                                                                    placeholder="Username"
                                                                />
                                                            </div>
                                                        </div>
                                                        <div class="row mb-3">
                                                            <div class="col-md-12">
                                                                <input
                                                                    class="form-control" 
                                                                    type="password"
                                                                    name="password" 
                                                                    placeholder="Passsword"
                                                                />
                                                            </div>
                                                        </div>
                                                        <div class="row mb-5">
                                                            <div class="col-md-12">
                                                                <select 
                                                                    class="form-select"
                                                                    name="country"
                                                                >
                                                                    <option value="Malaysia">Malaysia</option>
                                                                    <option value="Singapore" selected>Singapore</option>
                                                                    <option value="Taiwan">Taiwan</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="row mb-3">
                                                            <div class="col-md-12 text-center">
                                                                <button 
                                                                    type="submit" 
                                                                    class="form-control btn btn-primary"
                                                                >
                                                                    Sign up
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>

                                            <div class="modal-footer border-top-0">
                                                <div class="container-fluid">
                                                    <div class="row">
                                                        <div class="col-md-12 text-center">
                                                            Have an account?
                                                            <button 
                                                                class="btn btn-link mb-1 p-0"
                                                                data-bs-target="#login" 
                                                                data-bs-toggle="modal" 
                                                                data-bs-dismiss="modal"
                                                            >
                                                                Log in now
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <!-- Button trigger modal -->
                                <button
                                    type="button" 
                                    class="btn btn-primary fw-bold" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#login"
                                >
                                    Login
                                </button>
                                <!-- Modal -->
                                <div
                                    class="modal fade" 
                                    id="login"
                                    data-bs-backdrop="static"
                                    data-bs-keyboard="false"
                                    tabindex="-1" 
                                    aria-labelledby="staticBackdropLabel" 
                                    aria-hidden="true"
                                >
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header border-bottom-0">
                                                <button 
                                                    type="button" 
                                                    class="btn-close" 
                                                    data-bs-dismiss="modal" 
                                                    aria-label="Close"
                                                ></button>
                                            </div>

                                            <form
                                                class="mb-0"
                                                method="POST"
                                                action="/user/login"
                                            >
                                                <div class="modal-body">
                                                    <div class="container-fluid">
                                                        <div class="row mb-3">
                                                            <div class="col-md-12">
                                                                <input
                                                                    class="form-control"  
                                                                    type="text"
                                                                    name="username"                     
                                                                    placeholder="Username"
                                                                />
                                                            </div>
                                                        </div>
                                                        <div class="row mb-5">
                                                            <div class="col-md-12">
                                                                <input
                                                                    class="form-control" 
                                                                    type="password"
                                                                    name="password"
                                                                    placeholder="Passsword"
                                                                />
                                                            </div>
                                                        </div>
                                                        <div class="row mb-3">
                                                            <div class="col-md-12 text-center">
                                                                <button 
                                                                    type="submit" 
                                                                    class="form-control btn btn-primary"
                                                                >
                                                                    Login
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>

                                            <div class="modal-footer border-top-0">
                                                <div class="container-fluid">
                                                    <div class="row">
                                                        <div class="col-md-12 text-center">
                                                            Don't have an account?
                                                            <button 
                                                                class="btn btn-link mb-1 p-0"
                                                                data-bs-target="#register" 
                                                                data-bs-toggle="modal" 
                                                                data-bs-dismiss="modal"
                                                            >
                                                                Sign up now
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }; %>
                    </div>
                </div>
            </header>
        </div>