<html>
    <head>
        <title>Online Marketplace</title>
        <link 
            rel="stylesheet" 
            href="/bootstrap/css/bootstrap.min.css"
        >
        <link 
            rel="stylesheet" 
            href="/main.css"
        >
    </head>

    <body>
        <div class="container">
            <div class="row bg-primary p-3">
                <div class="container-fluid col-md-6 w-50">
                    <div class="fs-5 fw-bold mt-1">
                        <a 
                            class="shop-name text-dark fw-bold" 
                            href="/" 
                        >
                            ONLINE MARKETPLACE
                        </a>
                    </div>
                </div>
                <div class="container-fluid col-md-6 d-flex justify-content-end w-50">
                    <% if (username) { %>
                    <div class="d-flex align-items-center text-white me-5">
                        Hello, <%= firstname %>
                    </div>
                    <div class="nav-item border border-dark rounded-pill bg-light">
                        <a 
                            class="nav-link active text-center" 
                            aria-current="page" 
                            href="/user/logout"
                        >
                            Logout    
                        </a>
                    </div>
                    <% } else { %>
                    <div class="d-flex align-items-center border border-dark rounded-pill bg-light me-3">
                        <a 
                            class="nav-link active text-center" 
                            aria-current="page" 
                            href="/user/signup"
                        >
                            Register    
                        </a>
                    </div>
                    <div class="d-flex align-items-center border border-dark rounded-pill bg-light">
                        <a 
                            class="nav-link active text-center" 
                            aria-current="page" 
                            href="/user/login"
                        >
                            Login    
                        </a>
                    </div>
                    <% }; %>
                </div>
            </div>