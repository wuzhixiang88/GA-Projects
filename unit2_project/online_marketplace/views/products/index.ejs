<%- include("../partials/header.ejs") %>
<div class="row bg-secondary p-3">
    <div class="container-fluid col-12 d-flex">
        <div class="me-auto text-white fs-4 ms-2">
            My Listings
        </div>
        <% if (username) { %>
        <div class="d-flex justify-content-end align-items-center">
            <form class="me-3 mb-0">
                <input 
                    class="form-control" 
                    type="search" 
                    placeholder="Search listing" 
                    aria-label="Search">
            </form>
            <a 
                class="btn btn-secondary text-center fw-bold" 
                role="button"
                href="/product/new"
            >
                Add Item   
            </a>
        </div>
        <% }; %>
    </div>    
</div>

<div class="row bg-light">
    <% for (let i = 0; i < allProducts.length; i++) { %>
        <div class="col-md-3 mt-5 mb-5">
            <div class="container-fluid">
                <div>
                    <a href="/product/<%= allProducts[i]._id %>">
                        <img 
                            src="<%= allProducts[i].img %>" 
                            class="index-img img-thumbnail rounded mx-auto d-block w-100"
                            alt="<%= allProducts[i].name %>"
                        />
                    </a>
                </div>
                <div class="fw-bold text-truncate">
                    <%= allProducts[i].name %>
                </div>
                <div>
                    $<%= allProducts[i].price %>
                </div>
                <div class="text-truncate">
                    <%= allProducts[i].description %>
                </div>
                <div>
                    <%= allProducts[i].condition %>
                </div>
            </div>
        </div>
    <% }; %>
</div>
<%- include("../partials/footer.ejs") %>