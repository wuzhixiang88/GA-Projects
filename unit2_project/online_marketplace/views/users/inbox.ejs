<%- include("../partials/header.ejs") %>
<div class="container">
    <div class="row bg-secondary p-3">
        <div class="container-fluid col-12 d-flex">
            <div class="me-auto text-white fs-4 ms-2">
                Inbox
            </div>
            <div class="d-flex justify-content-end align-items-center">
                <a 
                    class="btn btn-secondary text-center fw-bold" 
                    role="button"
                    href="/product"
                >
                    Back  
                </a>
            </div>
        </div>    
    </div>

    <div class="row bg-light">
        <% for (let i = 0; i < allOffers.length; i++) { %>
            <% if (allOffers[i].buyerUsername === username) { %>
                <div class="col-md-8 border-bottom">
                    <div>
                        <%= allOffers[i].sellerUsername %>
                    </div>
                    <div class="fw-bold">
                        <%= allOffers[i].productName %>
                    </div>
                    <div>
                        Your Offer: <%= allOffers[i].offer %>
                    </div>
                </div>
                <div class="col-md-4 border-bottom">
                    <div class="text-center">
                        <%= new Date(allOffers[i].updatedAt).toISOString().slice(0, 10) %>
                    </div>
                    <div>
                        <img
                            src="<%= allOffers[i].productImg %>"
                            class="index-img img-thumbnail card-img-top rounded mx-auto d-block w-50 mb-3"
                        >
                    </div>
                </div>
          <% } else { %>
            <div class="col-md-8 border-bottom">
                <div>
                    <%= allOffers[i].buyerUsername %>
                </div>
                <div class="fw-bold">
                    <%= allOffers[i].productName %>
                </div>
                <div>
                    Offered You: <%= allOffers[i].offer %>
                </div>
            </div>
            <div class="col-md-4 border-bottom">
                <div class="text-center">
                    <%= new Date(allOffers[i].updatedAt).toISOString().slice(0, 10) %>
                </div>
                <div>
                    <img
                        src="<%= allOffers[i].productImg %>"
                        class="index-img img-thumbnail card-img-top rounded mx-auto d-block w-50"
                    >
                </div>
            </div>
            <% }; %>
        <% }; %>
    </div>
</div>
<%- include("../partials/footer.ejs") %>