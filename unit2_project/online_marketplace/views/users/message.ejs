<%- include("../partials/header.ejs") %>
<div class="container">
    <div class="row bg-secondary p-3">
        <div class="container-fluid col-12 d-flex">
            <div class="me-auto text-white fs-4 ms-2">
                Chat
            </div>
            <div class="d-flex justify-content-end align-items-center">
                <a 
                    class="btn btn-secondary text-center fw-bold" 
                    role="button"
                    href="/user/inbox"
                >
                    Back  
                </a>
            </div>
        </div>    
    </div>

    <div class="row bg-light">
        <div class="container border-bottom">
            <div class="mb-3 ms-4">
                <% if (thread.buyerUsername === username) { %>
                    <%= thread.sellerUsername %> 
                <% } else { %>
                    <%= thread.buyerUsername %>
                <% }; %>
            </div>

            <% for (let i = 0; i < thread.messages.length; i++) { %>
                <% if (thread.messages[i].username !== username) { %>
                    <p class="d-flex justify-content-start ms-4">
                        <%= thread.messages[i].body %>
                    </p>
                <% } else { %>
                    <p class="d-flex justify-content-end me-3">
                        <%= thread.messages[i].body %>
                    </p>
                <% }; %>
            <% }; %>
        </div>
        <div class="container-fluid border-bottom">
            <form
                method="POST"
                action="/user/inbox/<%= thread._id %>/?_method=PATCH"
                class="mb-0"
            >
                <div class="col-md-12 ms-1 p-3">
                    <div class="input-group mb-0">
                        <input 
                            type="text" 
                            class="form-control" 
                            name="message"
                            placeholder="Type here..." 
                        >
                        <button 
                            class="btn btn-outline-secondary" 
                            type="submit" 
                        >
                            Send
                        </button>
                        <input
                            type="hidden"
                            name="threadId"
                            value="<%= thread._id %>"
                        >
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("../partials/footer.ejs") %>